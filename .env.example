# Environment Variables for Kubernetes Cluster Health Checker
# Copy this file to .env and update with your values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Health check interval in seconds
CHECK_INTERVAL=60

# Kubernetes config file path
KUBECONFIG=/root/.kube/config

# ============================================================================
# GRAFANA SETTINGS
# ============================================================================

# Grafana admin credentials
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# Grafana server settings
GF_SERVER_ROOT_URL=http://localhost:3000
GF_SERVER_DOMAIN=localhost

# Allow user sign up
GF_USERS_ALLOW_SIGN_UP=false

# Install plugins (comma-separated)
GF_INSTALL_PLUGINS=grafana-piechart-panel

# ============================================================================
# PROMETHEUS SETTINGS
# ============================================================================

# Data retention period
PROMETHEUS_RETENTION=30d

# Scrape interval
PROMETHEUS_SCRAPE_INTERVAL=15s

# Evaluation interval
PROMETHEUS_EVALUATION_INTERVAL=15s

# ============================================================================
# ALERTMANAGER SETTINGS
# ============================================================================

# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
SMTP_PASSWORD=your-password-here
SMTP_FROM=alerts@example.com

# Slack webhook URL (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# SLACK_CHANNEL=#alerts

# PagerDuty service key (optional)
# PAGERDUTY_SERVICE_KEY=your-pagerduty-service-key

# ============================================================================
# DOCKER SETTINGS
# ============================================================================

# Image name and tag
IMAGE_NAME=k8s-health-checker
IMAGE_TAG=latest

# Container name
CONTAINER_NAME=health-checker

# ============================================================================
# RESOURCE LIMITS
# ============================================================================

# Health Checker resources
HEALTH_CHECKER_CPU_LIMIT=0.5
HEALTH_CHECKER_MEMORY_LIMIT=512M

# Prometheus resources
PROMETHEUS_CPU_LIMIT=1.0
PROMETHEUS_MEMORY_LIMIT=1G

# Grafana resources
GRAFANA_CPU_LIMIT=0.5
GRAFANA_MEMORY_LIMIT=512M

# AlertManager resources
ALERTMANAGER_CPU_LIMIT=0.25
ALERTMANAGER_MEMORY_LIMIT=256M

# Node Exporter resources
NODE_EXPORTER_CPU_LIMIT=0.25
NODE_EXPORTER_MEMORY_LIMIT=128M

# ============================================================================
# NETWORK SETTINGS
# ============================================================================

# Ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ALERTMANAGER_PORT=9093
NODE_EXPORTER_PORT=9100
HEALTH_CHECKER_PORT=8080

# ============================================================================
# VOLUME SETTINGS
# ============================================================================

# Data directories
PROMETHEUS_DATA_DIR=./data/prometheus
GRAFANA_DATA_DIR=./data/grafana
ALERTMANAGER_DATA_DIR=./data/alertmanager
LOGS_DIR=./logs

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Python version
PYTHON_VERSION=3.11

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

