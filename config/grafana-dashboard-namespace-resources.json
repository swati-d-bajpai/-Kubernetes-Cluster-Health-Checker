{
  "dashboard": {
    "title": "Namespace Resource Monitoring",
    "tags": ["kubernetes", "namespace", "cpu", "memory", "resources"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(kube_namespace_labels, namespace)",
          "current": {"text": "default", "value": "default"},
          "includeAll": false,
          "multi": false,
          "refresh": 1
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Namespace CPU Usage - $namespace",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",container!=\"\",container!=\"POD\"}[5m]))",
            "legendFormat": "CPU Cores"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 2
          }
        }
      },
      {
        "id": 2,
        "title": "Namespace Memory Usage - $namespace",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{namespace=\"$namespace\",container!=\"\",container!=\"POD\"})",
            "legendFormat": "Memory"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "decimals": 2
          }
        }
      },
      {
        "id": 3,
        "title": "Pod Count - $namespace",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "count(kube_pod_info{namespace=\"$namespace\"})",
            "legendFormat": "Pods"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "orientation": "auto"
        }
      },
      {
        "id": 4,
        "title": "Container Count - $namespace",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "count(kube_pod_container_info{namespace=\"$namespace\"})",
            "legendFormat": "Containers"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "orientation": "auto"
        }
      },
      {
        "id": 5,
        "title": "CPU Usage Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",container!=\"\",container!=\"POD\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "CPU Cores"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Memory Usage Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{namespace=\"$namespace\",container!=\"\",container!=\"POD\"}) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "CPU Requests vs Limits vs Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum(kube_pod_container_resource_requests{namespace=\"$namespace\",resource=\"cpu\"})",
            "legendFormat": "Requests"
          },
          {
            "expr": "sum(kube_pod_container_resource_limits{namespace=\"$namespace\",resource=\"cpu\"})",
            "legendFormat": "Limits"
          },
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",container!=\"\",container!=\"POD\"}[5m]))",
            "legendFormat": "Usage"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "CPU Cores"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Memory Requests vs Limits vs Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "sum(kube_pod_container_resource_requests{namespace=\"$namespace\",resource=\"memory\"})",
            "legendFormat": "Requests"
          },
          {
            "expr": "sum(kube_pod_container_resource_limits{namespace=\"$namespace\",resource=\"memory\"})",
            "legendFormat": "Limits"
          },
          {
            "expr": "sum(container_memory_usage_bytes{namespace=\"$namespace\",container!=\"\",container!=\"POD\"})",
            "legendFormat": "Usage"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Top Pods by CPU",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "topk(10, sum(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",container!=\"\",container!=\"POD\"}[5m])) by (pod))",
            "legendFormat": "{{pod}}"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 3
          }
        }
      },
      {
        "id": 10,
        "title": "Top Pods by Memory",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "topk(10, sum(container_memory_usage_bytes{namespace=\"$namespace\",container!=\"\",container!=\"POD\"}) by (pod))",
            "legendFormat": "{{pod}}"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 11,
        "title": "Resource Quota Usage - CPU",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "(sum(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",container!=\"\",container!=\"POD\"}[5m])) / sum(kube_resourcequota{namespace=\"$namespace\",resource=\"cpu\",type=\"hard\"})) * 100",
            "legendFormat": "CPU Quota Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 12,
        "title": "Resource Quota Usage - Memory",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "(sum(container_memory_usage_bytes{namespace=\"$namespace\",container!=\"\",container!=\"POD\"}) / sum(kube_resourcequota{namespace=\"$namespace\",resource=\"memory\",type=\"hard\"})) * 100",
            "legendFormat": "Memory Quota Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      }
    ]
  }
}

